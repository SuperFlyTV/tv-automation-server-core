{
	"extends": "./tsconfig-meteor.json",
	"compilerOptions": {
		/* At the time of writing we are not ready for stricter rules */
		"strict": false,
		"noImplicitAny": false,
		"noUnusedLocals": false,
		"noUnusedParameters": false,

		"skipLibCheck": true,
		"sourceMap": true,
		"allowJs": false,
		"lib": ["dom", "es6", "dom.iterable", "scripthost", "es2017", "es2018"]
	},
	"include": ["client/**/*", "server/**/*", "lib/**/*", "__mocks__/**/*"],
	"exclude": ["node_modules", "**/.coverage/**/*"]
}
